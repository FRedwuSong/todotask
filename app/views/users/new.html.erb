<div class="row">
  <div class="col-md-4 offset-4">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'users/shared/error_messages' %>

      <div class="mb-6">
        <%= f.label :name,
            class: 'block mb-2 text-sm font-medium text-gray-900' %>
        <%= f.text_field :name, class: 'mb-1 form-control',
            class: 'shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' %>
      </div>

      <div class="mb-6">
        <%= f.label :email,
            class: 'block mb-2 text-sm font-medium text-gray-900'%>
        <%= f.email_field :email, class: 'mb-1 form-control',
            class: 'shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' %>
      </div>

      <div class="mb-6">
        <%= f.label :password,
            class: 'block mb-2 text-sm font-medium text-gray-900' %>
        <%= f.password_field :password, class: 'mb-1 form-control',
            class: 'shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, I18n.t('activerecord.attributes.user.password_confirmation'),
            class: 'block mb-2 text-sm font-medium text-gray-900' %>
        <%= f.password_field :password_confirmation, class: 'mb-1 form-control',
            class: 'shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5' %>
      </div>

      <div><%= f.submit I18n.t('activerecord.attributes.user.create_my_account'), class: "mt-2 btn btn-primary" %></div>
    <% end %>
  </div>
</div>
